{
  "name": "react-ssr-boilerplate",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "React.js server-side rendering boilerplate",
  "main": "index.js",
  "scripts": {
    "test": "exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lbwa/react-ssr-boilerplate.git"
  },
  "keywords": [
    "React.js",
    "server-side-rendering"
  ],
  "author": "Bowen Liu <vnode@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lbwa/react-ssr-boilerplate/issues"
  },
  "homepage": "https://github.com/lbwa/react-ssr-boilerplate#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}